{
  "name": "belofte-enterprise",
  "version": "1.0.0",
  "description": "Unified frontend and backend application",
  "main": "server/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd server && npm ci && npx prisma generate && npm run build",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npx prisma migrate deploy && node dist/index.js",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rimraf client/.next client/out server/dist"
  },
  "keywords": ["express", "nextjs", "typescript", "fullstack"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.0"
  }
}